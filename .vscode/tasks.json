{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create New Viol",
      "type": "shell",
      "command": "echo",
      "args": [
        "Creating new viol file at tonewood/${input:library}/${input:iid}.md"
      ],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Create New Adjustment Log",
      "type": "shell",
      "command": "echo",
      "args": [
        "Creating adjustment log at tonewood/${input:library}/logs/${input:date}-${input:iid}-${input:description}.md"
      ],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Create Library Folder Structure",
      "type": "shell",
      "command": "mkdir",
      "args": [
        "-p",
        "${workspaceFolder}/tonewood/${input:library}/images",
        "${workspaceFolder}/tonewood/${input:library}/logs"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Viol File",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/tonewood/${input:library}/${input:iid}.md"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "library",
      "type": "promptString",
      "description": "Library name (e.g., elementary-school-a)",
      "default": ""
    },
    {
      "id": "iid",
      "type": "promptString",
      "description": "Instrument ID (iid) - e.g., yamaha-yvc-001"
    },
    {
      "id": "date",
      "type": "promptString",
      "description": "Date (YYYY-MM-DD)",
      "default": "2025-02-07"
    },
    {
      "id": "description",
      "type": "promptString",
      "description": "Short description (e.g., bridge-adjustment)"
    }
  ]
}
