{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create New Viol (Complete)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p '${workspaceFolder}/tonewood/${input:library}/images' '${workspaceFolder}/tonewood/${input:library}/logs' && touch '${workspaceFolder}/tonewood/${input:library}/images/.gitkeep' '${workspaceFolder}/tonewood/${input:library}/logs/.gitkeep' '${workspaceFolder}/tonewood/${input:library}/${input:iid}.md' && code '${workspaceFolder}/tonewood/${input:library}/${input:iid}.md'"
      ]
    },
    {
      "label": "Create Library Folder Structure",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p '${workspaceFolder}/tonewood/${input:library}/images' '${workspaceFolder}/tonewood/${input:library}/logs' && touch '${workspaceFolder}/tonewood/${input:library}/images/.gitkeep' '${workspaceFolder}/tonewood/${input:library}/logs/.gitkeep'"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Viol File",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/tonewood/${input:library}/${input:iid}.md"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "library",
      "type": "promptString",
      "description": "Library name (e.g., elementary-school-a)",
      "default": ""
    },
    {
      "id": "iid",
      "type": "promptString",
      "description": "Instrument ID (iid) - e.g., yamaha-yvc-001"
    },
    {
      "id": "date",
      "type": "promptString",
      "description": "Date (YYYY-MM-DD)",
      "default": ""
    },
    {
      "id": "description",
      "type": "promptString",
      "description": "Short description (e.g., bridge-adjustment)"
    }
  ]
}
