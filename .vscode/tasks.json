{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create New Viol",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/tonewood/${input:library}/${input:violId}.md"
      ],
      "problemMatcher": []
    },
    {
      "label": "Create New Adjustment Log",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/tonewood/${input:library}/logs/${input:date}-${input:violId}-${input:description}.md"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "library",
      "type": "promptString",
      "description": "Library name"
    },
    {
      "id": "violId",
      "type": "promptString",
      "description": "Viol ID"
    },
    {
      "id": "date",
      "type": "promptString",
      "description": "Date (YYYY-MM-DD)",
      "default": "${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}"
    },
    {
      "id": "description",
      "type": "promptString",
      "description": "Short description"
    }
  ]
}
