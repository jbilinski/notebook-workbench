{
  "files.autoSave": "onFocusChange",
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.formatOnSave": false
  },
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "files.exclude": {
    "_site/**": true
  },
  "files.insertFinalNewline": true,
  "markdown.preview.breaks": true,
  "markdown.extension.toc.levels": "2..6",
  "markdown.styles": [".vscode/custom-tag-style.css"],
  "markdown.copyFiles.destination": {
    "**/logs/**": "../images/${fileName}",
    "**": "./images/${fileName}"
  },
  "markdown.copyFiles.overwriteBehavior": "nameIncrementally",
  "pasteImage.path": "${currentFileDir}/images",
  "pasteImage.basePath": "${currentFileDir}",
  "pasteImage.prefix": "./",
  "pasteImage.defaultName": "Y-MM-DD-HH-mm-ss",
  "pasteImage.namePrefix": "${currentFileNameWithoutExt}_",
  "foam.edit.linkReferenceDefinitions": "withExtensions",
  "foam.completion.label": "identifier",
  "foam.files.newNoteDirectory": "currentDir",
  "foam.files.noteExtensions": ["md"],
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/dist": true,
    "**/.next": true,
    "**/_site": true
  },
  "files.associations": {
    "*.md": "markdown"
  },
  "cSpell.words": [
    "wsco",
    "viol",
    "Seidel",
    "Glaesel",
    "Stradivari",
    "tonewood",
    "iid",
    "anno",
    "provenance",
    "wikilink"
  ]
}
